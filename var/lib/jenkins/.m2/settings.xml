<?xml version="1.0" encoding="UTF-8"?>
<!-- Archivo settings.xml para Jenkins -->
<!-- UbicaciÃ³n: /var/lib/jenkins/.m2/settings.xml -->
<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0
          https://maven.apache.org/xsd/settings-1.0.0.xsd">

    <!-- Local Repository -->
    <localRepository>/var/lib/jenkins/.m2/repository</localRepository>

    <!-- Offline Mode -->
    <offline>false</offline>

    <!-- Plugin Groups -->
    <pluginGroups>
        <pluginGroup>org.springframework.boot</pluginGroup>
        <pluginGroup>org.sonarsource.scanner.maven</pluginGroup>
    </pluginGroups>

    <!-- Servers -->
    <servers>
        <!-- GitHub Packages Authentication -->
        <server>
            <id>github</id>
            <username>${env.GITHUB_USERNAME}</username>
            <password>${env.GITHUB_TOKEN}</password>
        </server>
    </servers>

    <!-- Mirrors -->
    <mirrors>
        <!-- Mirror for Maven Central -->
        <mirror>
            <id>central-mirror</id>
            <name>Maven Central Mirror</name>
            <url>https://repo1.maven.org/maven2</url>
            <mirrorOf>central</mirrorOf>
        </mirror>
    </mirrors>

    <!-- Profiles -->
    <profiles>
        <!-- GitHub Packages Profile -->
        <profile>
            <id>github</id>
            <repositories>
                <repository>
                    <id>github</id>
                    <url>https://maven.pkg.github.com/RPantaX/saga-pattern-spring-boot</url>
                    <snapshots>
                        <enabled>true</enabled>
                    </snapshots>
                    <releases>
                        <enabled>true</enabled>
                    </releases>
                </repository>
            </repositories>
        </profile>

        <!-- Jenkins Build Profile -->
        <profile>
            <id>jenkins</id>
            <properties>
                <!-- Skip interactive input -->
                <maven.test.failure.ignore>false</maven.test.failure.ignore>
                <maven.test.skip>false</maven.test.skip>

                <!-- Parallel builds -->
                <maven.compile.fork>true</maven.compile.fork>
                <maven.compiler.fork>true</maven.compiler.fork>

                <!-- Memory settings -->
                <maven.compiler.maxmem>1024m</maven.compiler.maxmem>

                <!-- Skip unnecessary plugins in CI -->
                <maven.javadoc.skip>true</maven.javadoc.skip>
                <maven.source.skip>true</maven.source.skip>

                <!-- Encoding -->
                <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
                <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
            </properties>
        </profile>

        <!-- Docker Build Profile -->
        <profile>
            <id>docker</id>
            <properties>
                <spring.profiles.active>docker</spring.profiles.active>
                <skipTests>true</skipTests>
            </properties>
        </profile>
    </profiles>

    <!-- Active Profiles -->
    <activeProfiles>
        <activeProfile>github</activeProfile>
        <activeProfile>jenkins</activeProfile>
    </activeProfiles>

</settings>